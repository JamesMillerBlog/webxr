{
  "name": "@webxr/server",
  "version": "0.0.2",
  "scripts": {
    "build:nest": "nest build",
    "build:node_modules": "rm -rf build && mkdir build && npm install --prefix ./build @nestjs/core @nestjs/common @nestjs/config @nestjs/platform-express @nestjs/platform-ws @nestjs/websockets aws-sdk nestjs-dynamoose dynamoose reflect-metadata rxjs axios node-jose",
    "build:all": "yarn build:nest & yarn build:node_modules",
    "format": "prettier --write \"app/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "NODE_ENV=development nest start --watch & sleep 30 && npx local-ssl-proxy --source 3002 --target 3003",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/server/app/main.js",
    "lint": "eslint \"{app,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pulumi:stack:select": "cd infrastructure && pulumi stack select",
    "pulumi:preview": "cd infrastructure && pulumi preview",
    "pulumi:up": "cd infrastructure && pulumi up -y",
    "pulumi:down": "cd infrastructure && pulumi down -y",
    "pulumi:local:up": "cd infrastructure && localstack start & pulumilocal up",
    "pulumi:local:destroy": "cd infrastructure && localstack start & pulumilocal destroy && localstack stop",
    "pulumi:login": "cd ../../ && ts-node ./scripts/pulumi/pulumiStackLogin.ts server",
    "deploy": "yarn pulumi:login && yarn predeploy:generateEnvs && yarn build:all && sleep 5 && yarn pulumi:up && yarn postdeploy:cleanUp",
    "destroy": "yarn pulumi:login && yarn pulumi:down",
    "predeploy:generateEnvs": "cd ../../ && ts-node ./scripts/env/generateDeploymentEnvs.ts server",
    "postdeploy:cleanUp": "cd ../.. && ts-node ./scripts/env/postDeploymentCleanup.ts server"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.10",
    "@nestjs/platform-express": "^10.2.10",
    "@nestjs/platform-socket.io": "^10.2.3",
    "@nestjs/platform-ws": "^10.2.10",
    "@nestjs/websockets": "^10.2.10",
    "@pulumi/aws": "^5.0.0",
    "@pulumi/aws-apigateway": "^1.1.0-alpha.3",
    "@pulumi/pulumi": "^3.0.0",
    "@types/aws-lambda": "^8.10.130",
    "@vendia/serverless-express": "^4.10.4",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1511.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "dynamoose": "^3.2.1",
    "nestjs-dynamoose": "^0.5.5",
    "node-jose": "^2.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/node-jose": "^1.1.13",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "ws": "^8.14.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "app",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
