{
  "name": "@jamesmillerblog/webxr",
  "private": "true",
  "version": "0.0.2",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "src/client",
    "src/shared",
    "src/server"
  ],
  "dependencies": {
    "@pulumi/aws": "^5.0.0",
    "@pulumi/pulumi": "^3.0.0",
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^5.0.10"
  },
  "scripts": {
    "dev": "npm run start:dev --workspace=@webxr/client & npm run start:dev --workspace=@webxr/server",
    "deploy:all": "npm run deploy:shared && npm run deploy:client-and-server",
    "deploy:client-and-server": "npm run deploy:client & npm run deploy:server", 
    "deploy:shared": "npm run pulumi:up --workspace=@webxr/shared",
    "deploy:client": "npm run deploy --workspace=@webxr/client",
    "deploy:server": "npm run deploy --workspace=@webxr/server",
    "destroy:all": "npm run destroy:client-and-server && npm run destroy:shared",
    "destroy:client-and-server": "npm run destroy:client & npm run destroy:server",
    "destroy:shared": "npm run pulumi:down --workspace=@webxr/shared",
    "destroy:server": "npm run pulumi:down --workspace=@webxr/server",
    "destroy:client": "npm run pulumi:down --workspace=@webxr/client",
    "scripts:enable":"chmod +x scripts/*",
    "scripts:generate:client-and-server-envs": "./scripts/generateEnvs.sh",
    "scripts:setup": "./scripts/initPulumi.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JamesMillerBlog/webxr.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": "James Miller",
  "license": "ISC"
}
